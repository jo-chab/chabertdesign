<?php    $element = $_GET['project'];?><script>    // Enable drag-and-drop functionality using JavaScript/jQuery    $(document).ready(function () {        // Initialize a variable to store the updated image order        var imageOrder = [];        // Update the image order when the user drops an image        $('.list-img-project').sortable({            update: function (event, ui) {                // Get the updated image order                imageOrder = $(this).sortable('toArray', { attribute: 'data-image-id' });            },        });        // Submit the updated image order to the server when the "Save" button is clicked        $('#update-types').on('click', function () {            // Send the image order and project ID to the server using AJAX            $.ajax({                url: 'action_project_img-placement.php',                method: 'POST',                data: {                    imageOrder: JSON.stringify(imageOrder),                    project: <?php echo $element ?> // Pass the project ID                },                success: function (response) {                    // Handle the success response (e.g., show a success message)                    alert('Image placement updated successfully!');                },                error: function (error) {                    // Handle errors (e.g., display an error message)                    alert('An error occurred while updating image placement.');                },            });        });    });</script><div class="dashboard-main">    <div class="dashboard-title">Project images</div>        <div class="dashboard-content">                <div class="d-form-cta header">            <a class="btn-primary btn-add small icon i-more" href="?content=3">Add an image</a>            <a class="btn-primary btn-update small icon i-image-select mobile-icon-only js-content-add" href="?content=24&project=<?php echo $element ?>" style="margin-bottom: 0"><span>Selectionner des images</span></a>        </div>                <form method="post" action="action_project_img-placement" enctype="multipart/form-data" >                        <ul class="list-img-project">                <?php                    $stmt = $db->prepare('SELECT url, id_image from images, project_images where id_image = image_id and project_id = ? order by image_place ASC');                    $stmt->execute([$element]);                                        $results = $stmt->fetchAll(PDO::FETCH_ASSOC);                                        foreach ($results as $result) {                        $id_image = $result['id_image'];                        $img = urldecode($result['url']);                        echo "                        <li class='img-project-el' data-image-id='$id_image'>                            <img src='$img' width='' height='' alt='' />                             <form action='action_project_img-delete' method='post'>                                <input type='hidden' name='image' value='$id_image'>                                <input type='hidden' name='project' value='$element'>                                <div class='btn-primary btn-delete small icon icon-only'></div>                            </form>                        </li>                        ";                    }                ?>            </ul>            <div class="btn-primary btn-confirm small icon mobile-icon-only" id="update-types"><span>Save</span></div>        </form>        </div></div>